<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    style="@style/List"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        style="@style/Item.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/Item.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        tools:text="Description" />

    <TextView
        android:id="@+id/tvLanguage"
        style="@style/Item.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:text="Language" />

    <TextView
        android:id="@+id/tvStars"
        style="@style/Item.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvLanguage"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:visibility="gone"
        tools:text="1" />

    <TextView
        android:id="@+id/tvForks"
        style="@style/Item.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvStars"
        android:drawableLeft="@drawable/ic_device_hub_black_24dp"
        android:visibility="gone"
        tools:text="2" />

    <TextView
        android:id="@+id/tvUpdated"
        style="@style/Item.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        tools:text="Updated" />

</RelativeLayout>