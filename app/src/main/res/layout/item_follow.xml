    android:id="@+id/itemContainer"
    style="@style/List"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFollowAvatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvLogin"
        style="@style/Item.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Name" />
</RelativeLayout>